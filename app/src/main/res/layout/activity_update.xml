<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".UpdateActivity">

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <Button
        android:id="@+id/btnchonanh"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/imgHinhDaiDien"
        android:backgroundTint="#000"
        android:text="@string/ChonAnh"
        android:textColor="#FFC107" />
    <Button
        android:layout_width="150dp"
        android:layout_below="@id/btnchonanh"
        android:layout_height="wrap_content"
        android:id="@+id/btnchupanh"
        android:text="@string/ChupAnh"
        android:backgroundTint="#000"
        android:textColor="#FFC107"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/imgHinhDaiDien"/>

    <EditText
        android:id="@+id/edtten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgHinhDaiDien"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Tên SV"
        android:textColor="#000"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtSdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtten"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Điện thoại"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edtnamsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSdt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Năm sinh"
        android:inputType="date" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtnamsinh"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#000"
        android:text="Hủy"
        android:textColor="#FFC107"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtnamsinh"
        android:layout_toRightOf="@+id/btnHuy"
        android:backgroundTint="#000"
        android:layout_marginLeft="10dp"
        android:text="Lưu"
        android:textColor="#FFC107"
        android:textStyle="bold" />
</RelativeLayout>