<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddActivity">

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_below="@id/form"
        android:layout_marginTop="-60dp"
        app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

    <Button
        android:id="@+id/btnchonanh"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/imgHinhDaiDien"
        android:backgroundTint="#000"
        android:text="@string/ChonAnh"
        android:textColor="#FFC107" />
    <Button
        android:layout_width="150dp"
        android:layout_below="@id/btnchonanh"
        android:layout_height="wrap_content"
        android:id="@+id/btnchupanh"
        android:text="@string/ChupAnh"
        android:backgroundTint="#000"
        android:textColor="#FFC107"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/imgHinhDaiDien"/>


    <TextView
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imgHinhDaiDien"
        android:text="Thêm sinh viên"
        android:textColor="#FFC107"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgHinhDaiDien"
        android:text="Nhập ID:"
        android:textColor="#000"
        android:textSize="20dp"></TextView>
    <EditText
        android:id="@+id/edtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:layout_below="@+id/id"
        android:inputType="textPersonName"
        android:hint="id" />
    <TextView
        android:layout_below="@+id/edtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập tên SV:"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/tensv"></TextView>
    <EditText
        android:id="@+id/edtTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tensv"
        android:inputType="textPersonName"
        android:hint="Tên SV" />
    <TextView
        android:layout_below="@+id/edtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập năm sinh:"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/old"></TextView>
    <EditText
        android:id="@+id/edtOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/old"
        android:inputType="textPersonName"
        android:hint="Nam Sinh" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập số điện thoại:"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/sdtttt"
        android:layout_below="@+id/edtOld"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/sdtttt"
        android:id="@+id/edtSdt"
        android:hint="Điện thoại"
        />
    <Button
        android:text="Hủy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHuy"
        android:layout_below="@+id/edtSdt"
        android:textColor="#ffc107"
        android:backgroundTint="#000"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:text="Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSdt"
        android:layout_toRightOf="@+id/btnHuy"
        android:textColor="#ffc107"
        android:backgroundTint="#000"
        android:id="@+id/btnThemm"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>